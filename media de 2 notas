nome = str(input('Digite seu nome:'))

nota1= int(input('Digite a primeira nota:'))

nota2=int(input('Digite a segunda nota:'))
calc=0

if(nota1 and nota2 <0):


    print('Nota invalida')

else:
    calc=(nota1+nota2)/2
    print('O nome do aluno é',nome,', a primeira nota é',nota1,',a segunda nota é',nota2,', e sua media é',calc)
